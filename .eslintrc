{
  "extends": [
    "airbnb-typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    // note you must disable the base rule as it can report incorrect errors
    "semi": "off",
    "@typescript-eslint/semi": [
      "error",
      "never"
    ],
    "react/react-in-jsx-scope": "off"
  }
}
