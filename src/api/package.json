{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Jonathan Gac <jonathan.gac@icloud.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run prod",
    "prod": "NODE_ENV=production npm-run-all build server",
    "watch": "nodemon",
    "dev": "NODE_ENV=development npm-run-all build server",
    "server": "node ../../dist/api/index.js",
    "build": "npm-run-all clean transpile",
    "transpile": "babel . --out-dir ../../dist/api",
    "clean": "rimraf ../../dist/api"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "./*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "apollo-datasource-rest": "^0.7.0",
    "apollo-errors": "^1.9.0",
    "apollo-resolvers": "^1.4.1",
    "apollo-server": "^2.10.1",
    "got": "^10.6.0",
    "graphql": "^14.6.0",
    "nexus": "^0.12.0-rc.13"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-flow": "^7.8.3",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
